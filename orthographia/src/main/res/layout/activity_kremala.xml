<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_kremala"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.orth.admir.orthographia.Kremala"
    android:background="@drawable/backthree"
    android:layout_marginBottom="0dp">

    <Button
        android:id="@+id/check_if_correct_btn"
        android:elevation="0dp"
        android:background="@drawable/elenxos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-1dp" />

    <TableLayout
        android:id="@+id/alphabet_table_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/check_if_correct_btn"
        android:layout_below="@+id/letters_linear_layout"
        android:layout_toRightOf="@+id/dummy_imgview"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        >

    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="150dp"
        android:layout_toRightOf="@+id/dummy_imgview"


        android:id="@+id/letters_linear_layout">


    </LinearLayout>

    <ImageView
        android:id="@+id/dummy_imgview"
        android:layout_width="76dp"
        android:layout_height="230dp"
        app:srcCompat="@drawable/kremalaa"
        android:tag="a"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/display_vowel_btn"
        android:background="@drawable/lamb_button"
        android:layout_height="55dp"
        android:layout_width="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_letters_textview"
        android:textSize="18sp"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/holo_orange_light"
        android:layout_alignBaseline="@+id/display_vowel_btn"
        android:layout_alignBottom="@+id/display_vowel_btn"
        android:layout_toLeftOf="@+id/display_vowel_btn"
        android:layout_toStartOf="@+id/display_vowel_btn" />

</RelativeLayout>
