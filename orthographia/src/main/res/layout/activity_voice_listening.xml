<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.orth.admir.orthographia.VoiceListening"
    android:gravity="center"
    android:background="@drawable/backround3">

    <Button
        android:id="@+id/play_btn"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:shadowColor="#1B21CF"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"



        android:background="@drawable/play_button_backround"
        android:layout_marginLeft="224dp"
        android:layout_marginStart="224dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editText"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:editable="true"
        android:lines="1"
        android:shadowColor="@android:color/background_light"
        android:imeOptions="flagNoExtractUi"

        android:singleLine="true"
        android:cursorVisible="true"
        android:textCursorDrawable="?android:attr/textCheckMarkInverse"
        android:maxLength="16"
        tools:textStyle="bold"
        android:allowUndo="true"
        android:autoText="true"
        android:ems="10"
        android:typeface="sans"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@android:color/background_light" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/check_if_correct"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="40dp">

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/solve_btn"
            android:background="@drawable/lamb_button"
            android:layout_width="51dp" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/explain_btn"
            android:background="@drawable/book_button"
            android:layout_width="51dp" />

        <Button
            android:layout_height="wrap_content"
            android:id="@+id/next_btn"
            android:background="@drawable/triangle_button"


            android:layout_width="match_parent" />

    </LinearLayout>

    <Button
        android:id="@+id/check_if_correct"
        android:elevation="0dp"
        android:background="@drawable/elenxos_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/play_btn"
        android:layout_alignEnd="@+id/play_btn" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:id="@+id/easy_btn"
            android:background="@drawable/easybutton"


            />

        <Button
            android:layout_width="100dp"
            android:layout_height="46dp"
            android:id="@+id/medium_btn"
            android:background="@drawable/mediumbutton"
            android:layout_marginTop="30dp" />

        <Button
            android:layout_height="46dp"
            android:id="@+id/hard_btn"
            android:background="@drawable/difficultbutton"
            android:layout_width="match_parent"
            android:layout_marginTop="30dp" />
    </LinearLayout>


</RelativeLayout>
