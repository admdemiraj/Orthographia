<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admir.orthographia.VoiceListening"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/speak_listen"
        android:layout_alignParentTop="false"
        android:layout_height="80dp">

        <Button
            android:id="@+id/play_btn"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:shadowColor="#1B21CF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"



            android:background="@android:drawable/ic_media_play"
            android:layout_marginLeft="224dp"
            android:layout_marginStart="224dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </FrameLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/editText"
        android:layout_marginTop="105dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:editable="true"
        android:lines="1"
        android:shadowColor="@color/colorPrimaryDark"
        android:textSize="24sp"
        android:imeOptions="flagNoExtractUi"

        android:singleLine="true"
        android:fontFamily="sans-serif-smallcaps"
        android:textColorLink="?attr/actionMenuTextColor"
        android:textColorHint="@color/colorPrimaryDark"
        android:textStyle="normal|bold|italic"
        android:allowUndo="false"
        android:cursorVisible="true"
        android:textCursorDrawable="?attr/actionBarItemBackground"
        android:background="?android:attr/editTextBackground"
        android:textColor="?attr/colorPrimaryDark"
        android:maxLength="16" />

    <Button
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:background="@drawable/roundedbutton"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Έλεγχος" />


</RelativeLayout>
