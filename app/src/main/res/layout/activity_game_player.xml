<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admir.orthographia.GamePlayer"
    android:gravity="center">

    <FrameLayout
        android:layout_width="match_parent"
        android:background="@drawable/speak_listen"
        android:layout_alignParentTop="false"
        android:layout_height="80dp">

        <Button
            android:id="@+id/play_btn"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:shadowColor="#1B21CF"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="5"



            android:background="@android:drawable/ic_media_play"
            android:layout_marginLeft="224dp"
            android:layout_marginStart="224dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </FrameLayout>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:id="@+id/editText"
        android:layout_marginTop="90dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:contextClickable="true"
        android:editable="true"
        android:lines="1"
        android:shadowColor="@color/colorPrimaryDark"
        android:imeOptions="flagNoExtractUi"

        android:singleLine="true"
        android:textColorLink="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:cursorVisible="true"
        android:textCursorDrawable="?android:attr/textCheckMarkInverse"
        android:background="?android:attr/editTextBackground"
        android:maxLength="16"
        android:digits="αβγδεζηθικλμνξοπρστυφχψως"
        tools:textStyle="bold"
        android:allowUndo="true"
        android:autoText="true"
        android:ems="10"
        android:typeface="sans"
        android:textSize="24sp"
        android:textAlignment="center"
        android:textStyle="normal|bold|italic"
        android:textColor="@color/colorPrimaryDark" />

    <Button
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/button2"
        android:elevation="0dp"
        android:background="@drawable/roundedbutton"
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Έλεγχος"

        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText"
        android:layout_marginTop="23dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/muslebrain"
            android:id="@+id/imageView" />

        <Button
            android:text="Εύκολο"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/button11"
            android:background="@drawable/difficultybuttons" />

        <Button
            android:text="Μέτριο"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/button6"
            android:background="@drawable/difficultybuttons" />

        <Button
            android:text="Δύσκολο"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:id="@+id/button5"
            android:background="@drawable/difficultybuttons" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="35dp"
        android:layout_marginEnd="35dp">

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button13"
            android:background="@drawable/wronganswerbutton" />

        <Button
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/button12"
            android:layout_weight="1"
            android:background="@drawable/wronganswerbutton" />
    </LinearLayout>


</RelativeLayout>
